<%- include("../partials/header") %>

<div class="container">
	
	<header class="jumbotron">
		<div class="container">
			<h1>
				Welcome to CampAdvisor!
			</h1>
			<p>
				View the most gorgeous campgrounds in Turkey 
			</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add New Campgrounds</a>
			</p>
		</div>
	</header>

		<div class="row text-center">
				
			<% campgrounds.forEach(function(camps){ %>
				<div class="col-lg-3 col-sm-6">
					<div class="thumbnail">
						<img src="<%= camps.image %>">
						<div class="caption">
							<h4>
							   <%= camps.name %>	
							</h4>
						</div>
						<p>
							<a href="/campgrounds/<%= camps._id%>" class="btn btn-primary"> More Info</a>
						</p>
						</div>
				</div>


			<% });%>  
		</div>
		
</div>

<%- include("../partials/footer") %>